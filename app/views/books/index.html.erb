<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <% if @user.profile_image.attached? %>
       <%= image_tag @user.profile_image, size: "100x100" %>
      <% else %>
       <%= image_tag 'default-image', size: "100x100" %>
      <% end %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
       <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block edit_user_current_user.id" do %>
       <i class="fas fa-user-cog"></i>
       <% end %>
      </div>
      <h2 class="mt-3">New Book</h2>
      <%=form_with model:@book,url:'/books',method: :post do |f| %>
      <div class="field">
      <label for="book_title">Title</label>
      <%= f.text_field:title %>
     </div>
     <div class="field">
     <label for="book_body">Opinion</label>
     <%=f.text_area:body %>
    </div>
    <div class="actions">
     <%=f.submit 'Create Book' %>
     </div>
    <% end %>

    </div>
  </div>
</div>